<h2>Create a listing</h2>
<form action="/products" method="post">
  <input type="text" class="form-control" name="title" placeholder="Title"/> <br/>
  <input type="text" class="form-control" name="image" placeholder="Image URL"><br/>
  <textarea name="description" class="form-control" rows="8" cols="80" placeholder="Description"></textarea><br/>
  <input type="number" class="input-group-text" name="price" placeholder="Price" min="0"/><br/>

  <div class="createBtns">
  <select name="category">
    <% @category.each do |category| %>
  	<option value="<%=category.id%>"><%=category[:name]%></option>
    <% end %><br/>
      </select>
  <button type="submit" class="btn btn-secondary">Submit</button><br/>
  </div>
</form>
